<h2 class="withTip">Settings</h2>
<span class="tip">Customize your display name, shown whenever you leave a comment.</span>
<%= form_for(@subscriber, :url => settings_path) do |f| %>
  <ul>
    <li>
      <label>Display Name</label>
      <%= f.text_field :display_name, :class => "full" %>
    </li>
    <li>
      <button class="signupBtn" type="submit">
        <span>Sign Up</span>
      </button>
    </li>
  </ul>
<% end %>